<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold text-center mb-6">Create a New Match</h1>

  <%= form_with(model: @match, local: true, class: "space-y-6") do |form| %>
    <div>
      <%= form.label :team_a, "Team A Name", class: "block text-gray-700 font-medium" %>
      <%= form.text_field :team_a, class: "block w-full mt-1 text-gray-800 p-3 bg-gray-100 border rounded-lg" %>
      <% if @match.errors[:team_a].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @match.errors[:team_a].first %></p>
      <% end %>
    </div>

    <div>
      <%= form.label :team_b, "Team B Name", class: "block text-gray-700 font-medium" %>
      <%= form.text_field :team_b, class: "block w-full mt-1 text-gray-800 p-3 bg-gray-100 border rounded-lg" %>
      <% if @match.errors[:team_b].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @match.errors[:team_b].first %></p>
      <% end %>
    </div>

    <div>
      <%= form.label :goals_team_a, "Initial Score for Team A", class: "block text-gray-700 font-medium" %>
      <%= form.number_field :goals_team_a, class: "block w-full mt-1 text-gray-800 p-3 bg-gray-100 border rounded-lg", value: @match.goals_team_a || 0 %>
    </div>

    <div>
      <%= form.label :goals_team_b, "Initial Score for Team B", class: "block text-gray-700 font-medium" %>
      <%= form.number_field :goals_team_b, class: "block w-full mt-1 text-gray-800 p-3 bg-gray-100 border rounded-lg", value: @match.goals_team_b || 0 %>
    </div>

    <div class="mt-6">
      <%= form.submit "Create Match", class: "w-full bg-blue-600 text-white p-4 rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Back to match list', matches_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>