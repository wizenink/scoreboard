<div class="max-w-lg mx-auto mt-10">
  <h1 class="text-3xl font-bold text-center mb-10">Matches List</h1>
  <div class="mb-6 text-center">
    <%= link_to 'Create New Match', new_match_path, class: "bg-green-600 text-white p-4 rounded-lg hover:bg-green-700 inline-block" %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-lg space-y-4">
    <% @matches.each do |match| %>
      <a href="<%= match_path(match) %>" class="block bg-gray-200 p-4 hover:bg-gray-300 rounded-lg">
        <h2 class="text-xl font-semibold text-center">
          <%= match.team_a %> vs <%= match.team_b %>
        </h2>
      </a>
    <% end %>
  </div>
</div>